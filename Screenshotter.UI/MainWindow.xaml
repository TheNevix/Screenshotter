<Window x:Class="Screenshotter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screenshotter.UI"
        mc:Ignorable="d"
        Title="Screenshotter" Height="150" Width="300">
    <!-- Adjust the size as needed -->
    <Grid>
        <TabControl>
            <TabItem Header="Capture">
                <Grid>
                    <Button Content="Take a screenshot :)" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="About">
                <Grid>
                    <TextBlock Text="Made by TheNevix" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>